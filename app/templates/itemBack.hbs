<a href="#" class="item-image-container">
    <img src="{{model.picture}}" alt="" width="100" height="100" />
</a>
<div class="item-details">
    <div class="item-title-container">
        <input type="text" value="{{model.title}}" maxlength="60" size="30" />
    </div>
    <div class="item-price-container">
        <label for="price">Precio: $</label>
        <input type="text" value="{{model.price}}" id="price" maxlength="10" />
    </div>
    <div class="item-quantity-container">
        <label for="quantity">Cantidad: </label>
        <input type="text" value="{{model.quantity}}" id="quantity" maxlength="4" size="4" />
    </div>
    <div class="item-dragged-container">
        <label>Acumula: </label>
        <div class="item-dragged-pill">
            <span>
                Visitas
                <i class="syi-icon-user"></i>
                <strong class="dragged-visits">{{model.visits}}</strong>
            </span>
            <span>
                Ventas
                <i class="syi-icon-basket"></i>
                <strong class="dragged-sales">{{model.sells}}</strong>
            </span>
        </div>
    </div>
    <div class="item-listing-container">
        <h3>Visitas estimadas para esta categoría *</h3>
        <ul>
            {{#each listings}}
                <li class="listing-type {{#compare listingId ../model.listingId operator='==='}}listing-selected{{/compare}}">
                    <input name="listing-{{../model.id}}" id="{{listingId}}-{{../model.id}}" type="radio" {{#compare listingId ../model.listingId operator='==='}}checked{{/compare}} value="{{name}}">
                    <label for="{{listingId}}-{{../model.id}}">
                        <span>{{name}}</span>
                    </label>
                    <label for="{{listingId}}-{{../model.id}}">
                        <strong>{{math id "*" 3}} veces</strong> más visitas
                        {{!-- <i class="ch-icon-help-sign"></i> --}}
                    </label>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="item-ammounts-container">
        <div class="price-resell-container media-object-fit">
            <h4>Costo por republicar</h4>
            <div class="price-resell">
                <span class="ch-price">$ 0<sup>00</sup></span>
            </div>
        </div>
        <div class="price-per-sell-container media-object-fit-right">
            <h4 class="">Costo por cada venta</h4>
            <div class="price-per-sell" data-js="">
                <span class="ch-price">$ 88<sup>00</sup></span>
            </div>
        </div>
    </div>
</div>
<div class="item-action-container">
    <input type="submit" name="" value="Republicar" class="ch-btn ch-btn-large" data-js="resellBtn">
</div>